{
  "extends": ["airbnb", "prettier"],
  "quotes": [2, "single", "avoid-escape"],
  "plugins": ["meteor", "jsx-a11y"],
  "env": {
    "browser": true,
    "meteor": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "react/prefer-es6-class": 0,
    "no-confusing-arrow": 0
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  }
}
